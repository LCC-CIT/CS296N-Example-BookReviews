@model Review
@{
    ViewData["Title"] = "Review";
}
<h1>Book Review</h1>
<strong>Enter your Review</strong>
<br />
<form method="post" class="container form-horizontal">
    <div class="row">
        <label asp-for="BookTitle" class="control-label col-sm-3">Title</label>
        <input asp-for="BookTitle" class="form-control col-sm-6" />
    </div>
    <div class="row">
        <label asp-for="AuthorName" class="control-label">Author</label><br />
        <input asp-for="AuthorName" class="form-control" /><br />
    </div>
    <div class="row">
        <label asp-for="Reviewer.Name" class="control-label">Reviewer</label><br />
        <input asp-for="Reviewer.Name" class="form-control" /><br />
    </div>
    <div class="row">
        <label asp-for="ReviewText" class="control-label">Review</label><br />
        <textarea asp-for="ReviewText" placeholder="Write your review here" class="form-control" >
</textarea>
    </div>
    <div class="row">
        <button type="submit" class="form-control">Submit</button>
    </div>
</form>

<br />
<hr />

@if (Model != null)
{
    <h2>Your Review</h2>
    <p>
        <strong>Title:</strong><br />
        @Model.BookTitle<br />
        <strong>Author:</strong><br />
        @Model.AuthorName<br />
        <strong>Reviewer:</strong><br />
        @Model.Reviewer.Name<br />
        <strong>Review Date:</strong><br />
        @Model.ReviewDate<br />
        <strong>Review:</strong><br />
        @Model.ReviewText<br />
    </p>
}