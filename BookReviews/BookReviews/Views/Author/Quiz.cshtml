@model QuizVM
@{
    ViewData["Title"] = "Author Quiz";
}

<div>
    <h1 class="display-4">Author Quiz</h1>
    <form method="post" class="container">

        <label asp-for="answer1" class="control-label">Who wrote Les Misérables?</label>
        <input asp-for="answer1" type="text" class="form-control pb-1" />
        <p>@Model?.check1</p>
        <br />
        <label asp-for="answer2">What year was Charles Dickens born?</label>
        <input asp-for="answer2" type="number" class="form-control pb-1" />
        <p>@Model?.check2</p>
        <br />
        <p class="row">The book 1984 was written in 1984</p>
        <div class="row">
            <label for="true" class="col-1">True</label>
            <input asp-for="answer3"  id="true" type="radio" value="true" class="form-control col-1" />
        </div>
        <div class="row">
            <label for="false" class="col-1">False</label>
            <input asp-for="answer3" id="false" type="radio" value="false" class="form-control col-1" />
        </div>
        <p>@Model?.check3</p>

        <br />
        <input type="submit" class="form-control btn" />
    </form>
</div>